<div class="container">
<%= form_tag searching_path, method: :post, class: 'form' do %>
  <div class="form-group">
    <%= label_tag :from_location %><br>
    <%= select_tag :from_location, options_for_select(Search::LOCATIONS, ""), class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :to_location %><br>
    <%= select_tag :to_location, options_for_select(Search::LOCATIONS, ""), class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :date_of_journey %><br>
    <div class="input-group date">
      <input type="text" class="form-control" id="date_of_journey" name="date_of_journey"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :one_way %><br>
    <%= check_box_tag :one_way, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= submit_tag 'Search', class: 'btn btn-primary' %>
  </div>
  <% end %>
  </div>
<script>
      $('.input-group.date').datepicker({
        startDate: "today",
        format: "dd/mm/yyyy",
        clearBtn: true,
        autoclose: true,
        todayHighlight: true
      });
</script>
